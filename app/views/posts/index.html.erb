<p style="color: green;"><%= notice %></p>

<%= link_to "Create a new post", "/posts/new"%>
<hr />

<h2>All Posts</h2>
<br />
<% @posts.each do |post| %>

  <h4><%= post.title %></h4>
  <h6>This is post # <%= post.id %></h6>
  <%= post.description %>
  <p><%= link_to "Edit", '/posts/:id' %> |
     <%= link_to 'Delete', '/posts/:id', method: :delete, data: {confirm: "Are you sure?"} %>
<hr>
<% end %>
